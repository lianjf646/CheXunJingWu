<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/long_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_145"
        android:layout_marginRight="@dimen/dp_71"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_text"
            android:visibility="visible" />.

        <EditText
            android:visibility="gone"
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_48"
            android:background="@drawable/bg_et_radius_10"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawableLeft="@drawable/prople_icon"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right|center_vertical"
            android:hint="请输入账号"
            android:padding="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/sp_21" />

        <EditText
            android:visibility="gone"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_et_radius_10"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right|center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/sp_21" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_btn_yuan"
            android:padding="@dimen/dp_15"
            android:text="登录"
            android:textColor="#162D5A"
            android:textSize="@dimen/sp_25" />

        <CheckBox
            android:visibility="gone"
            android:id="@+id/chb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_20"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_22"
            android:theme="@style/MyCheckBox1" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#ffffff" />
    </LinearLayout>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/long_bottom_img"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_25"
        android:background="@drawable/bg_radius_write_5"
        android:gravity="center"
        android:hint="搜索"
        android:imeOptions="actionSearch"
        android:padding="@dimen/dp_25"
        android:singleLine="true"
        android:textSize="@dimen/dp_23"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_renxiang"
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_200"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_birth_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/lvbei"
                android:gravity="center"
                android:minEms="4"
                android:text="正常"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/tv_work_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/sp_22" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_not_data"
        style="@style/text_not_data" />
</LinearLayout>
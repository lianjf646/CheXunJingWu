<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/include_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_zllx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_25"
                    android:layout_weight="1"
                    android:text="警情编号:"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp_22"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@drawable/bg_radius_yellow_5"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_14"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="待确认"
                    android:textColor="#E69022"
                    android:textSize="@dimen/sp_22" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/jwt_bg_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_25"
                android:text="基本信息"
                android:textColor=" #333C87 "
                android:textSize="@dimen/sp_22" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/jwt_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间:"
                    android:textColor="@color/text_color_999999"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_fbsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text=""
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布单位:"
                    android:textColor="@color/text_color_999999"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_fbdw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text=""
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布人员:"
                    android:textColor="@color/text_color_999999"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_fbry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"

                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布内容:"
                    android:textColor="@color/text_color_999999"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_fbnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yuyin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/jwt_bg_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_25"
                    android:text="语音"
                    android:textColor=" #333C87 "
                    android:textSize="@dimen/sp_22" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/jwt_bg_color" />

                <com.hylink.chexunjingwu.ui.view.MyListView
                    android:id="@+id/lv_yuyin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/jwt_bg_color" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_25"
                    android:text="照片"
                    android:textColor=" #333C87 "
                    android:textSize="@dimen/sp_22" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/jwt_bg_color" />

                <com.hylink.chexunjingwu.ui.view.MyGridView
                    android:id="@+id/gv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_25"
                    android:horizontalSpacing="@dimen/dp_25"
                    android:numColumns="3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/jwt_bg_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_25"
                    android:text="视频"
                    android:textColor=" #333C87 "
                    android:textSize="@dimen/sp_22" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/jwt_bg_color" />

                <com.hylink.chexunjingwu.ui.view.MyGridView
                    android:id="@+id/gv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_25"
                    android:horizontalSpacing="@dimen/dp_25"
                    android:numColumns="3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_feed_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/jwt_bg_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_25"
                    android:text="反馈信息"
                    android:textColor="#333C87 "
                    android:textSize="@dimen/sp_22" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/jwt_bg_color" />

                <com.hylink.chexunjingwu.ui.view.MyListView
                    android:id="@+id/lv_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/btn_bg_color"
        android:gravity="center"
        android:padding="@dimen/dp_20"
        android:text="确认指令"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24" />

</LinearLayout>